<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h1 class="alert-heading">Error <%= err.status %>
                </h1>
                <p>
                    <%= err.message %>
                </p>
                <hr>
                <p>
                    <%= err.stack %>
                </p>
            </div>
        </div>
    </div>